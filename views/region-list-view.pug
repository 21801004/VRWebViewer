extends _bootstrap
append styles
    // Custom styles for this template
    link(href='/css/navbar-static-top.css', rel='stylesheet')

block body
    // Static navbar
    +navbar-static("Gyungbuk SoS lab","navbar")
        +nav_item("/") Home
        +nav_item_dropdown("#")(label="Dropdown")
            +nav_item("/admin/regions", "active") Admin
    .container
        
        script.
            function deleteMe (id) {
                var url = '/admin/regions/delete/' + id;
                $.ajax({
                    type: "DELETE",
                    url: url,
                    data: id,
                    success: function(response) {
                        window.location.href = "/admin/regions/";
                    },

                });
            }
        for item in regionList
            .jumbotron
                p= item.name
                p= item.location
                a.btn.btn-primary(href='/admin/regions/add_vr/' + item._id, role='button') Add VR »
                a.btn(class="btn-info", href='/admin/regions/update_vr/' + item._id, role='button') Update VR »
                a.btn(class="btn-danger",role="button",onclick="deleteMe('"+ item._id +"');") Delete

        +a-btn-primary("/admin/regions/new") Add new region